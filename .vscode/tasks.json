  "version": "2.0.0",
  "tasks": [
    {
      "label": "build main",
      "type": "shell",
      "command": "g++ -g main.cpp -o main.exe",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "showReuseMessage": false,
        "echo": false,
      },
      "problemMatcher": "$gcc"
    }
  ]
}